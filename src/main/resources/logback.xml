<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- WireMock Logging -->
    <logger name="com.github.tomakehurst.wiremock" level="DEBUG"/>

    <!-- Set the root log level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
